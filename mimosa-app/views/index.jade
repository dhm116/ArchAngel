extends layout

append navigation-items
  ul.right(ng-controller='NavbarController')
    li.divider
    li
      a.item(href='/tests')
        i.fa.fa-check-square-o
        span.pad-left Unit Tests Report
    li.has-dropdown
      a(href='#') Admin
      ul.dropdown
        li
          a(href='/Students')
            i.fa.fa-group
            span.pad-left Students
    li.ng-hide(ng-show='!user.authenticated')
      a(href='/login')
        i.fa.fa-sign-in
        span.pad-left Login
    li.ng-hide(ng-show='user.authenticated')
      a(href='/logout')
        i.fa.fa-sign-in
        span.pad-left Logout
    li.ng-hide(ng-show='user.authenticated')
      a(href='#') Welcome back {{user.username}}
  ul.left
    li.divider
    li.has-dropdown
      a(href='#')
        span Courses
        //- i.pad-left.icon-caret-down
        span.pad-left
        span.round.label {{courses.length}}
      ul.dropdown
        li(ng-repeat='course in courses')
          a(href='/Course/{{course.id}}')
            i.fa.fa-clock-o.alert.label.round
            span.pad-left {{course.name}}

append content
  .row
    .ng-view
