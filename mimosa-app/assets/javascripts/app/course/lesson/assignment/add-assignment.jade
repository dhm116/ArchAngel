.content-padded(ng-cloak)
  nav.breadcrumbs(ng-cloak)
    li
      a(href='/') Home
    li
      a(href='/course/view/{{course.id}}') {{course.name}}
      a(href='/course/view/{{course.id}}/lesson/view/{{lesson.id}}')  {{lesson.name}}
    li.current Assignment
  .large-6.columns
    .row-padded
      h2.subheader {{action}} Assignment
    .row-padded
      form
        fieldset
          legend Assignment
          .row
            .large-12.columns
              label Title
              input(type='text', ng-model='assignment.name')
          .row
            .large-12.columns
              label Description
              input(type='text', ng-model='assignment.description')
          .row
            .large-12.columns
              label Content
              textarea(ng-model='assignment.content')
          .row
            .large-12.columns
              label Due Date
              input(type='text', ng-model='assignment.due_date')
          .row
            .large-6.columns
              button.button.small(ng-click='save()')
                i.fa.fa-save
                span.pad-left Save Changes
            .large-6.columns
              button.button.small.alert
                i.fa.fa-undo
                span.pad-left(ng-click='undo()') Undo Changes
  .large-6.columns
    .row-padded
      h2.subheader Preview
    .row-padded.panel
      h4 {{assignment.name}}
        small.pad-left {{assignment.description}}
      hr
      p(ng-show='lesson', btf-markdown='assignment.content')
