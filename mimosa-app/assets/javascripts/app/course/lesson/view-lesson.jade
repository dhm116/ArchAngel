.content-padded(ng-cloak)
  include lesson-breadcrumb
    li.current Week {{lesson.week_no}}: {{lesson.name}}
  .large-12.columns
    .row
      h2 Week {{lesson.week_no}}: {{lesson.name}}
        small.pad-left {{lesson.description}}
          span.pad-left(ng-show='isInstructor')
            a.button.tiny.round(href='/course/view/{{course.id}}/lesson/edit/{{lesson.id}}')
              i.fa.fa-edit
              span.pad-left Edit

      hr
    .row
      dl.sub-nav
        dt
          i.fa.fa-book
          span.pad-left Assignments:
            span.pad-left(ng-show='assignments.length == 0')
              em None
        dd(ng-repeat='assignment in assignments')
          a(href='#') {{assignment.name}}
    .row
      .large-11.large-offset-1.columns
        p(ng-show='lesson.content', btf-markdown='lesson.content', ng-cloak)
    .row(ng-show='assignments.length > 0')
      h4.subheader
        i.fa.fa-book
        span.pad-left Assignments
      hr
      .large-11.large-offset-1.columns
        .row(ng-repeat='assignment in assignments')
          h5
            a(href='/course/view/{{course.id}}/lesson/view/{{lesson.id}}/assignment/view/{{assignment.id}}') {{assignments.indexOf(assignment)+1}}) {{assignment.name}}
          p This assignment is worth
            span.pad-left
            span.label.round {{assignment.points}}
            span.pad-left points and is due on {{assignment.due_date}}
       .large-6.columns(ng-cloak)
        .row-padded(ng-if='assignment.name')
          a.button.tiny.round(href='/course/view/{{course.id}}/lesson/view/{{lesson.id}}/assignment/edit/{{assignment.id}}', ng-show='isInstructor')
            i.fa.fa-edit
            span.pad-left Edit
          h4 {{assignment.name}}
            small.pad-left {{assignment.descrption}}
        .row-padded(ng-if='!assignment.name')
          h5.subheader Loading assignment data
