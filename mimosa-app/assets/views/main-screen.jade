.large-4.columns.hide-for-small
  ul.side-nav
    li
      h3.subheader
        i.fa.fa-folder-open
        span.pad-left Courses
    li.divider
    li(ng-repeat='course in courses')
      a.item(href='/course/view/{{course.id}}')
        span.label.round(ng-class="{alert: course.id > 1}") {{course.upcoming.length}}
        span.pad-left {{course.name}}
        i.fa.fa-arrow-right.pad-left
        span.pad-left Week {{moment().diff(moment(course.start_date), 'weeks')}}
.large-8.columns
  h1.ui.header.dividing Welcome to ArchAngel
    span.pad-left(ng-if='isMobile')
      i.fa.fa-mobile
  .row
    ul.hide-for-small
      li(ng-repeat='user in users')
        {{user.username}} {{user.email}}
  .row.show-for-small
    h3.pad-left.subheader
      i.fa.fa-folder-open
      span.pad-left Courses
    ul.list
      li(ng-repeat='course in courses')
        a(href='/course/view/{{course.id}}')
          span {{course.name}}
          i.fa.fa-arrow-right.pad-left
          span.pad-left Week {{moment().diff(moment(course.start_date), 'weeks')}}
          span.chevron
          span.count 2
