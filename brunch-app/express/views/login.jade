extends layout

block navigation
  .ui.menu.pointing
    a.item.active(href='/')
      img.ui.image.small.floated.move.up.more(src='http://webstyleguide.psu.edu/img/twoTone-border10.png')
      span ArchAngel

append content
  form.form-signin.ui.form.attached.fluid.segment(action='/login', method='post')
    if typeof(user) === 'undefined'
      user = {}

    .ui.16.column.grid
      .row
        .two.wide.column
        .twelve.wide.column
          h2.form-signin-heading.text-muted
            i.icon-lock
            span.pad-left Please sign in
        .two.wide.column
      .row
        .two.wide.column
        .twelve.wide.column
          .ui.input.focus
            input#userid(type='text', name='userid', value=user.userid, placeholder='Access ID')
        .two.wide.column
      .row
        .two.wide.column
        .twelve.wide.column
          .ui.input
            input#password(type='password', name='password', placeholder='Password', autofocus=true)
        .column
      .row
        .two.wide.column
        .twelve.wide.column
         .ui.checkbox
            input(type='checkbox', id='remember-me', value='remember-me')
            label.box(for='remember-me')
          label(for='remember-me') Remember me
        .two.wide.column
      .row
        .two.wide.column
        .twelve.wide.column
          button.ui.circular.green.button(type='submit') Sign in
        .two.wide.column
  .ui.row.fluid.segment
    h2.ui.header.dividing Quick login
    .ui.ten.stackable.items
      each person, index in people
        .item.auto-user(style='min-height: 160px;')
          .ui.image
            img(src=person.profile.picture)
          .content
            .name.full-name #{person.firstName} #{person.lastName}
            .description #{person.userid}