extends layout

include mixins/packages

block head
  link(rel='stylesheet', href='stylesheets/app.css')
  //if IE 7
      link(rel='stylesheet', href='stylesheets/font-awesome-ie7.min.css')
  script(src='javascripts/head.js')

block content
  .container
    .navbar.navbar-inverse
      .navbar-inner
        a.brand(href="https://github.com/jerfowler/ExpressBrunchJade", target="_blank") Express Brunch with Jade
        .nav-collapse.collapse
          ul.nav
            li: a(href="http://expressjs.com/", target="_blank") Express
            li: a(href="http://brunch.io", target="_blank") Brunch
            li: a(href="http://jade-lang.com/", target="_blank") Jade
          #LoginView
    .row
      .span12
        .hero-unit
          h1= title
            small  v#{version}
          p Welcome to #{title} Brunch with Jade
          p: small <i class="icon-thumbs-up"></i> Based on 
              a(href="https://github.com/elving/brunch-with-hipsters", target="_blank") Brunch with Hipsters and Bootstrap
          p: a(class="btn btn-primary btn-large", href="https://github.com/jerfowler/ExpressBrunchJade", target="_blank") Learn more
    - while (packages.length>0) {
        mixin packages(packages.splice(0, 3))
    - }
    hr
    footer
      p Â© Company 2013

  #AppView
    
block scripts
  script(src='/socket.io/socket.io.js')
  script(src='javascripts/vendor.js')
  script(src='javascripts/app.js', defer, onload="require('initialize');")
